<% provide(:title, t(".manage_book")) %>
<div class="modal col-md-12 row" id="myModal">
</div>
<nav aria-label="breadcrumb" class="col-md-12">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t("home"), admin_root_path %></li>
    <li class="breadcrumb-item"><%= link_to t("_users"), admin_users_path %></li></li>
    <li class="breadcrumb-item active" aria-current="page">Data</li>
  </ol>
</nav>
<div class="row col-md-12">
  <div class="col-md-2">
    <h5>List book: </h5>
  </div>
  <%= link_to content_tag(:i,"", class: "fas fa-search"), "", class: "btn col-md-8" %>
  <div class="col-md-2">
    <%= link_to t(".create_book"), new_admin_book_path,
      remote: true, data: {toggle: "modal", target: "#myModal"},
      class: "btn btn-primary" %>
  </div>
</div>
<div id="result" class="col-md-12">
  <%= t(".have") +" #{@books.total_count} "+ t(".books") %>
</div>
<div class="col-md-12">
  <table class="table table-bordered table-hover bg-lightblue">
    <thead>
      <tr class="text-center">
        <th><%= t(".stt") %></th>
        <th><%= t(".title") %></th>
        <th><%= t(".author") %></th>
        <th><%= t(".published_at") %></th>
        <th><%= t(".picture") %></th>
        <th><%= t(".describe") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <%= render partial: "table", locals: {books: @books} %>
    </tbody>
  </table>
  <div id="pagination">
  <%= paginate @books, window: 2, theme: "twitter-bootstrap-4",
    pagination_class: "justify-content-center", id: "pagination" %>
  </div>
</div>
