<% provide(:title, t("admin.users.index.create_user")) %>
<div class="col-md-7 border border-primary rounded my-md-5">
  <div class="col-md-12">
    <h2 class="text-center my-md-3"><%= t("admin.users.index.create_user") %></h2>
  </div>
  <%= form_for [:admin, @user] do |f| %>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :name, t("users.new.name"), class: "col-md-4" %>
        <%= f.text_field :name, class: "form-control",
          placeholder: (t "users.new.your_name") %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :email, class: "col-md-4" %>
        <%= f.email_field :email, class: "form-control", id: "email",
          placeholder: "example@gmail.com" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :password, t("users.new.password"), class: "col-md-4" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.label :password_comfirmation, t("users.new.password_comfirm"),
          class: "col-md-4" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit t("users.new.create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
