<% provide(:title, t(".manage_authors")) %>
<nav aria-label="breadcrumb" class="col-md-12">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t("home"), admin_root_path %></li>
    <li class="breadcrumb-item"><%= link_to t(".authors"), admin_authors_path %></li></li>
    <li class="breadcrumb-item active" aria-current="page">Data</li>
  </ol>
</nav>
<h5 id="result" class="col-md-12"><%= "List have #{@authors.total_count} authors" %></h5>
<div class="col-md-5">
  <%= form_tag url_for, method: :get, remote: true do %>
    <div class="form-group">
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control" %>
        <%= submit_tag "Search", name: nil, class: "btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-5"></div>
<div class="col-md-2">
  <%= link_to t(".create_author"), new_admin_author_path, class: "btn" %>
</div>
<div class="col-md-12">
  <table class="table table-bordered table-hover bg-primary">
    <thead>
      <tr class="text-center">
        <th><%= t(".stt") %></th>
        <th><%= t(".name") %></th>
        <th><%= t(".books") %></th>
        <th><%= t(".birth_year") %></th>
        <th><%= t(".country") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody class="bg-white" id="data-table">
      <%= render partial: "table", locals: {authors: @authors} %>
    </tbody>
  </table>
  <div id="pagination">
    <%= paginate @authors, remote: true, window: 2, theme: "twitter-bootstrap-4",
      pagination_class: "justify-content-center", id: "pagination" %>
  </div>
</div>
