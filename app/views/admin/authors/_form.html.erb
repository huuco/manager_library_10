<%= form_for [:admin, @author] do |f| %>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :name, t(".name"), class: "col-md-4" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :birth_year, t(".birth_year"), class: "col-md-4" %>
      <%= f.number_field :birth_year, class: "form-control", min: 1000, max: 2010 %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :country, t(".country"), class: "col-md-4" %>
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit t(".create"), class: "btn btn-primary" %>
  </div>
<% end %>
