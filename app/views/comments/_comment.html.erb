<div class="row" id ="comment-<%= comment.id %>">
  <div class="col-md-12">
    <div class="comment-content">
      <b><%= comment.user.name %>: </b>
      <%= comment.content %>
      <% if user_signed_in? %>
        <% if current_user == comment.user || current_user.manager? %>
          <%= link_to fa_icon("trash-o"), book_comment_path(comment.book, comment),
            method: :delete, remote: true, data: {confirm: t(".delete_cmt")},
            class: "text-right" %>
        <% end %>
      <% end %>
    </div>
    <i><%= comment.updated_at.strftime("%d-%m-%Y") %>&nbsp</i>
    <i><%= time_ago_in_words(comment.updated_at)%> <%= t(".ago") %></i>
  </div>
</div>
