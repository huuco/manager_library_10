<header class="sticky-top">
  <nav class="navbar navbar-expand-md bg-blueviolet navbar-dark">
    <div class="container">
      <%= link_to "Library", "#", class: "navbar-brand" %>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if logged_in? && current_user.manager? %>
            <li class="nav-item">
              <%= link_to t("books"), admin_books_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("categories"), admin_categories_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("authors"), admin_authors_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("publishers"), admin_publishers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("_users"), admin_users_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to t("categories"), categories_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("authors"), authors_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("publishers"), publishers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to t("contact_us"), "#", class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item dropdown">
              <%= link_to current_user.name, "", class: "text-light dropdown-toggle",
                data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", "#" %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", log_out_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <%= link_to "Sign up", sign_up_path, class: "form-inline nav-item text-light mr-3" %>
            <%= link_to "Log in", log_in_path, class: "form-inline nav-item text-light mr-2" %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
