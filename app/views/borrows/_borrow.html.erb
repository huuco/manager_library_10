<td><%= link_to borrow.book.title, book_path(borrow.book_id),
  class: "text-dark" %></td>
<td><%= borrow.date_borrow %></td>
<td><%= borrow.borrow_days %></td>
<td><%= borrow.status %></td>
<td><%= borrow.date_return %></td>
<td>
  <% if borrow.waitting? && @user == current_user %>
    <%= link_to t(".cancel"), book_borrow_path(borrow.book_id, borrow, params.permit().merge(status: :cancelled)),
      remote: true, method: :put, class: "" %>
  <% end %>
</td>
